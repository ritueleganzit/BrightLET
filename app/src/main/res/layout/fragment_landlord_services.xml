<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#fff"
    tools:context="com.eleganzit.brightlet.fragments.Fragment_incoming">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#181818"
            android:layout_gravity="center"
            android:text="14 Groggles Street, DB5 4JF"/>



    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/landlord_services_tabs"
        android:layout_below="@+id/header"
        android:background="#f7f7f7"
        android:elevation="0dp"
        app:tabIndicatorColor="#979797"
        app:tabTextColor="#aaaaaa"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabSelectedTextColor="#979797"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <android.support.v4.view.ViewPager
        android:id="@+id/landlord_services_view_pager"
        android:layout_below="@+id/profile_tabs"
        android:layout_width="match_parent"
        android:background="#fff"
            android:layout_marginBottom="?attr/actionBarSize"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>
