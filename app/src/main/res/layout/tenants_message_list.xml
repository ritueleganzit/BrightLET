<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/add_user"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:text="John Cloone"
                    android:id="@+id/name"
                    android:textColor="#5a5a5a"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:ellipsize="end"
                    android:layout_weight="0.4"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:text="Inspection Report"
                android:id="@+id/subject"
                android:maxLines="1"
                android:textColor="#5a2e87"
                android:padding="1dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/red_dot"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:text="14 Groggles Street, B12 9JX"
                android:id="@+id/address"
                android:maxLines="1"
                android:textColor="#aaaaaa"
                android:padding="1dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#EAEDED"
        android:layout_marginBottom="2dp"></View>

</LinearLayout>
