<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eleganzit.brightlet.SignInActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow"
                />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="164dp"
            android:layout_marginTop="30dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/brightlet_logo_3x"
            />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/h_signin"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textColor="#95989a"
            android:layout_weight="1"
            android:textSize="19dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40px"
            android:layout_gravity="center"
            android:background="#f39200"></View>
        <TextView
            android:id="@+id/h_signup"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#95989a"
            android:text="SIGN UP"
            android:layout_weight="1"
            android:textSize="19dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/signin">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <include layout="@layout/signup"></include>
            <LinearLayout
                android:id="@+id/signin_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:padding="20dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#878787">
                    <AutoCompleteTextView
                        android:id="@+id/in_who"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/userlist"
                        android:padding="5dp"
                        android:background="@drawable/edittext_bg"
                        android:layout_margin="20dp"
                        android:drawableRight="@drawable/dropdown1x"
                        android:hint="Who you are?"
                        android:textColorHint="#878787"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#878787">
                    <EditText
                        android:id="@+id/in_email"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:layout_margin="20dp"
                        android:hint="Email"
                        android:drawableRight="@drawable/email"
                        android:textColorHint="#878787"
                        android:background="@drawable/edittext_bg"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#878787">
                    <EditText
                        android:id="@+id/in_password"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:drawableRight="@drawable/pass"
                        android:layout_margin="20dp"
                        android:hint="Password"
                        android:textColorHint="#878787"
                        android:background="@drawable/edittext_bg"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13dp"
                    android:text="Forgot your password?"
                    android:textColor="#181818"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/signin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="#5a2e87"
        android:textColor="#fff"
        android:text="SIGN IN"/>
    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="#5a2e87"
        android:textColor="#fff"
        android:text="SIGN UP"/>

</RelativeLayout>
