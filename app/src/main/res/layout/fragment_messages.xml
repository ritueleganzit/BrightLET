
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context="com.eleganzit.brightlet.fragments.Fragment_dashboard">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TabLayout
        android:id="@+id/messages_tabs"
        android:layout_below="@+id/header"
        android:background="#f7f7f7"
        app:tabIndicatorColor="#979797"
        app:tabTextColor="#aaaaaa"
        app:tabSelectedTextColor="#979797"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/messages_view_pager"
        android:layout_below="@+id/messages_tabs"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
