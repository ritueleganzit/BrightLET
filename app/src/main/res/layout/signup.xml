<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/signup_layout"
    android:layout_width="match_parent"
    android:layout_below="@+id/header"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:padding="20dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        >
        <EditText
            android:id="@+id/up_who"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:entries="@array/userlist"
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="20dp"
            android:drawableRight="@drawable/dropdown1x"
            android:hint="Who you are?"
            android:textColorHint="#878787"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        >
        <EditText
            android:id="@+id/up_name"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:entries="@array/userlist"
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="20dp"
            android:drawableRight="@drawable/path_557"
            android:hint="Your Name"
            android:textColorHint="#878787"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        >
        <EditText
            android:id="@+id/up_phone"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:entries="@array/userlist"
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="20dp"
            android:drawableRight="@drawable/group_109"
            android:hint="Mobile Number"
            android:textColorHint="#878787"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        >
        <EditText
            android:id="@+id/up_email"
            android:padding="5dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_margin="20dp"
            android:hint="Email"
            android:drawableRight="@drawable/email"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error_appearance"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        >
        <EditText
            android:id="@+id/up_password"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableRight="@drawable/pass"
            android:layout_margin="20dp"
            android:hint="Password"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="12dp"
        android:text="@string/agreement"
        android:textColor="#aaaaaa"/>
</LinearLayout>