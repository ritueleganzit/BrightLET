<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#fff"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/add_user"/>

            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:id="@+id/profile_text"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/circle_msg"
                android:layout_gravity="center"
                android:textColor="#95989a"
                android:textSize="17sp"
                android:text="JC"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:text="John Cloone"
                android:id="@+id/name"
                android:textColor="#5a5a5a"
                android:gravity="start"
                android:maxLines="1"
                android:padding="1dp"
                android:ellipsize="end"
                android:layout_weight="0.4"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/options"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/group_687_2x"/>
                </LinearLayout>



            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:text="14 Groggles Street, B12 9JX"
                android:id="@+id/address"
                android:maxLines="1"
                android:textColor="#aaaaaa"
                android:padding="1dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/status_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.eleganzit.brightlet.fonts.TextViewMuseo500
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="OCCUPYING"
                        android:textColor="#fff"
                        android:background="#f39200"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/time_bg"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content">
                    <com.eleganzit.brightlet.fonts.TextViewMuseo500
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="27/10/2018"
                        android:textColor="#fff"
                        android:background="#5ebc00"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#EAEDED"
        android:layout_marginBottom="2dp"></View>

</LinearLayout>
