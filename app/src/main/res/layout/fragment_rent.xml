<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.eleganzit.brightlet.fragments.Fragment_rent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="#181818"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="14 Groggles Street, DB5 4JF"/>

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#979797"
            android:layout_gravity="center"
            android:text="- £500.00 pm"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"

            android:gravity="center">
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="06/04/2015 "/>
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="-"/>
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text=" 05/04/2016"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f7f7f7"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_above="@+id/second_last"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"

                android:layout_gravity="center"
                android:orientation="vertical">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Rent Paid" />
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#31 - 12/10/2017"
                    android:textColor="#aaaaaa"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rent_bg"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="6dp"
                    android:text=" £500.00"
                    android:textColor="#fff"
                    android:background="#5ebc00"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:background="#f7f7f7"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Partial Rent Payment" />
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#32 - 12/10/2017"
                    android:textColor="#aaaaaa"
                    android:textSize="9sp"/>
            </LinearLayout>
            <com.eleganzit.brightlet.fonts.TextViewMuseo700
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textColor="#5ebc00"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="11sp"
                android:text="£450.00"/>
            <LinearLayout
                android:id="@+id/partial_bg"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/partial_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="6dp"
                    android:text=" £500.00"
                    android:textColor="#fff"
                    android:background="#d03131"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:background="#f7f7f7"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"

                android:layout_gravity="center"
                android:orientation="vertical">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Unpaid Rent" />
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#33 - 12/11/2017"
                    android:textColor="#aaaaaa"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/unpaid_bg"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/unpaid_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="6dp"
                    android:text=" £500.00"
                    android:textColor="#fff"
                    android:background="#d03131"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:background="#f7f7f7"></View>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/second_last"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_above="@+id/bottom"
        android:orientation="vertical"
        android:background="#fff"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f7f7f7"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Total Outstanding"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:text=" £550.00"
                android:textColor="#d03131"
                android:textSize="12sp"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        >

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Total Rent"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/payment_bg"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:text=" £1,500.00"
                android:textColor="#fff"
                android:background="#5ebc00"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
