<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eleganzit.brightlet.SignInActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetStart="0dp"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="164dp"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/brightlet_logo_3x"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/signin">

            <LinearLayout
                android:id="@+id/signin_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:padding="20dp"
                android:layout_height="wrap_content">

                <com.eleganzit.brightlet.fonts.TextViewMuseo300
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginRight="60dp"
                    android:textColor="#aaaaaa"
                    android:text="Need help with your password? Simply, fill in the required details below and weâ€™ll help you create a new password."
                    android:textSize="10sp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787">
                    <com.eleganzit.brightlet.utils.CEditText
                        android:id="@+id/in_who"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/userlist"
                        android:padding="5dp"
                        android:background="@drawable/edittext_bg"
                        android:layout_margin="20dp"
                        android:drawableRight="@drawable/dropdown1x"
                        android:hint="Who you are?"
                        android:textColorHint="#878787"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#878787">
                    <com.eleganzit.brightlet.utils.CEditText
                        android:id="@+id/in_email"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:layout_margin="20dp"
                        android:hint="Email"
                        android:drawableRight="@drawable/email"
                        android:textColorHint="#878787"
                        android:background="@drawable/edittext_bg"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:textSize="17sp"
        android:background="#5a2e87"
        android:textColor="#fff"
        android:text="SIGN IN"/>


</RelativeLayout>
