<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="vertical">

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOK A TRADESPERSON"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#f39200"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"

            android:textColorHint="#878787">
            <com.eleganzit.brightlet.utils.CEditText
                android:id="@+id/tradesperson"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:maxLines="1"
                android:drawableRight="@drawable/dropdown1x"
                android:layout_height="wrap_content"
                android:hint="Tradesperson"
                android:textSize="16sp"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/edittext_bg"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"

            android:textColorHint="#878787">
            <com.eleganzit.brightlet.utils.CEditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:hint="Message / Note"
                android:textSize="16sp"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/edittext_bg"/>
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOKING DETAIS"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#f39200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Date/Time"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="12sp"
            android:textColor="#5a5a5a"/>
        <LinearLayout
            android:id="@+id/date_bg"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="#f39200"
            android:layout_height="wrap_content">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:text=" AWATING TENTANT"
                android:textColor="#fff"
                android:textSize="11sp"/>
        </LinearLayout>
        </LinearLayout>
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Awaiting booking notes"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#5a5a5a"/>

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#f39200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â£100.00"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="12sp"
                android:textColor="#5a5a5a"/>
            <LinearLayout
                android:id="@+id/status_bg"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="#f39200"
                android:layout_height="wrap_content">
                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="6dp"
                    android:text="PRICE CONFIRMED"
                    android:textColor="#fff"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/certi_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg_grey"
            android:text="Confirm Price"
            android:textColor="#cbcbcb"
            android:textAllCaps="false"/>
        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOB COMPLETED"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#f39200"/>

        <com.eleganzit.brightlet.fonts.TextViewMuseo500
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Awaiting job completion notes"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:textColor="#5a5a5a"/>

    </LinearLayout>
</ScrollView>