<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout android:id="@+id/signin_layout"
    android:layout_below="@+id/header"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"

    android:padding="15dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/company_name"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/userlist"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/edittext_bg"
            android:layout_margin="20dp"
            android:drawableRight="@drawable/dropdown1x"
            android:hint="Company Name"
            android:textColorHint="#878787"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/company_type"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_margin="20dp"
            android:hint="Company Type"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/website_url"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_margin="20dp"
            android:hint="Website URL"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>
    <com.eleganzit.brightlet.fonts.TextViewMuseo500
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#f39200"
        android:text="BANK DETAILS"/>

    <com.eleganzit.brightlet.fonts.TextViewMuseo300
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Your bank account details are required for your tenants to set up a standing order and pay rent in to."
        android:textSize="12sp"
        android:textColor="#aaaaaa"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/account_name"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:entries="@array/userlist"
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:layout_margin="20dp"
            android:hint="Account Name"
            android:textColorHint="#878787"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/sort_code"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:inputType="number"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Sort Code"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColorHint="#878787">
        <com.eleganzit.brightlet.utils.CEditText
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:inputType="number"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Account Number"
            android:textColorHint="#878787"
            android:background="@drawable/edittext_bg"/>
    </android.support.design.widget.TextInputLayout>

    <com.eleganzit.brightlet.fonts.TextViewMuseo500
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#f39200"
        android:text="TIPS AND OFFERS"/>

    <com.eleganzit.brightlet.fonts.TextViewMuseo300
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Please send me landlord tips and offers. We are a registered member of the Information Commissioner's Office (ICO) and follow the guidelines on data protection and sharing."
        android:textSize="12sp"
        android:textColor="#aaaaaa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_grey"
            android:text="Yes"
            android:layout_margin="5dp"
            android:textColor="#cbcbcb"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cbcbcb"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_grey"
            android:text="No"
            android:textAllCaps="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></LinearLayout>

</LinearLayout>
</ScrollView>