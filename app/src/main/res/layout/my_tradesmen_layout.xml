<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/add_user"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:text="Mo Brington"
                    android:id="@+id/name"
                    android:textColor="#5a5a5a"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:ellipsize="end"
                    android:layout_weight="0.4"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.eleganzit.brightlet.fonts.TextViewMuseo500
                android:text="078502084511"
                android:id="@+id/address"
                android:maxLines="1"
                android:layout_weight="1"
                android:textColor="#aaaaaa"
                android:padding="1dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/options"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/group_687_2x"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.eleganzit.brightlet.fonts.TextViewMuseo500
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:textColor="#5a2e87"
                    android:textSize="10sp"
                    android:text="Bathroom Specialist, Handyman, Plumber"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#EAEDED"
        android:layout_marginBottom="2dp"></View>

</LinearLayout>
